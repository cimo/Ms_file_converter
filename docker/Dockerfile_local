FROM ubuntu:22.04

ARG _ENV_NAME
ARG _DOMAIN
ARG _TIME_ZONE
ARG _LANG
ARG _SERVER_PORT
ARG _PATH_ROOT

ENV ENV_NAME=${_ENV_NAME}
ENV DOMAIN=${_DOMAIN}
ENV TZ=${_TIME_ZONE}
ENV LANG=${_LANG}
ENV SERVER_PORT=${_SERVER_PORT}
ENV PATH_ROOT=${_PATH_ROOT}

ENV DEBIAN_FRONTEND=noninteractive
ENV DEBCONF_NOWARNINGS=yes
ENV SUDO_FORCE_REMOVE=yes
ENV NODE_OPTIONS=--use-openssl-ca

COPY ./.ms_cronjob-volume/certificate/* /usr/local/share/ca-certificates/
COPY ./docker/NotoSansJP-Regular.ttf /usr/share/fonts/truetype/noto/
COPY ./docker/NotoSansSymbols2-Regular.ttf /usr/share/fonts/truetype/noto/
COPY ./docker/NotoColorEmoji-Regular.ttf /usr/share/fonts/truetype/noto/
COPY ./docker/font.local.conf /etc/fonts/local.conf

RUN cd ~ \
    # No root
    && useradd -U node -d ${PATH_ROOT} -s /bin/bash \
    && mkdir -p ${PATH_ROOT} \
    && chown -R node:node ${PATH_ROOT} \
    && chmod -R 775 ${PATH_ROOT} \
    # Update
    && VERSION_CODENAME=$(grep VERSION_CODENAME= /etc/os-release | cut -d= -f2) \
    && chmod -R 0644 /usr/local/share/ca-certificates/ \
    && apt-get update && apt-get install -y ca-certificates tzdata curl media-types \
    && update-ca-certificates \
    && ln -sf /usr/share/zoneinfo/${TZ} /etc/localtime && echo ${TZ} > /etc/timezone \
    && echo "application/typescript ts" >> /etc/mime.types \
    # NodeJs
    && curl -fsSL https://deb.nodesource.com/setup_22.x | bash - \
    && apt-get update && apt-get install -y \
    nodejs \
    # Dbus
    && apt-get update && apt-get install -y \
    dbus \
    dbus-x11 \
    # GPU
    && apt-get update && apt-get install -y \
    libglib2.0-0 \
    libgtk-3-0 \
    libnss3 \
    libnspr4 \
    libx11-6 \
    libxext6 \
    libxrender1 \
    libxrandr2 \
    libfreetype6 \
    libfontconfig1 \
    libasound2 \
    libgomp1 \
    libgbm1 \
    libglu1-mesa \
    libvulkan1 \
    mesa-vulkan-drivers \
    mesa-utils \
    xdg-utils \
    libxcb1 \
    libx11-xcb1 \
    libcairo2 \
    # Libre office
    && apt-get update && apt-get install -y \
    libxml2 \
    libssl3 \
    libxslt1.1 \
    libcups2 \
    && curl -fsSL "https://appimages.libreitalia.org/LibreOffice-still.basic-x86_64.AppImage" -o "/home/libreoffice.AppImage" \
    && cd /home/ \
    && chmod +x "/home/libreoffice.AppImage" \
    && "/home/libreoffice.AppImage" --appimage-extract \
    && chown -R node:node "/home/squashfs-root/" \
    && cd ~ \
    # Clean
    && apt-get remove --purge -y sudo \
    && rm -rf /var/lib/apt/lists/* \
    && apt-get clean -y \
    && apt-get autoclean -y \
    && apt-get autoremove -y

USER node

WORKDIR ${PATH_ROOT}

# Npm
CMD rm -rf ${PATH_ROOT}node_modules/ ${PATH_ROOT}package-lock.json \
    && npm install \
    && npm run execute

EXPOSE ${SERVER_PORT}
